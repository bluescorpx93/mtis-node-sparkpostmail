<!doctype html>
<html>
  <head>
    <title> Node Mails</title>
    <link rel='stylesheet' href='/assets/bootstrap/bootstrap4.min.css' />
  </head>
  <body>
    <div class="container">
      <div class='jumbotron'>
        <div style='padding-bottom:40px;'>
          <h1 class='text-center'> Welcome</h1>
          <h4 class='text-center'><%= title %> </h4>
        </div>
        <div class=' col-sm-6 offset-sm-3'>
          <form action = '/mail/send' method='post'>
            <div class='form-group'>
              <label> To </label>
              <input type='text' placeholder='name@example.com' name='emailTo' class='form-control' />
            </div>
            <div class='form-group'>
              <label> Subject </label>
              <input type='text' placeholder='name@example.com' name='emailSubject' class='form-control' />
            </div>
            <div class='form-group'>
              <label> Message </label>
              <textarea class='form-control' rows="3" name='emailBody'></textarea>
            </div>
            <div class='form-group'>
              <button class='btn btn-primary' type='submit'>Submit</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
</html>
