<!doctype html>
<html>
  <head>
    <title> Node Mails</title>
    <link rel='stylesheet' href='/assets/bootstrap/bootstrap4.min.css' />
    <linl rel='stylesheet' href='/assets/custom/styles.css' />
  </head>
  <body>
    <div class="container">
      <div class='jumbotron'>
        <div style='padding-bottom:40px;'>
          <h2 class='text-center'> <small> <%= title %> </small></h2>
        </div>
        <div class='row'>
          <div class=' col-sm-4 offset-sm-1'>
            <h3> With API </h3>
            <form action = '/mail/send' method='post'>
              <div class='form-group'>
                <label> To </label>
                <input type='text' placeholder='name@example.com' name='emailTo' class='form-control' />
              </div>
              <div class='form-group'>
                <label> Subject </label>
                <input type='text' placeholder='name@example.com' name='emailSubject' class='form-control' />
              </div>
              <div class='form-group'>
                <label> Message </label>
                <textarea class='form-control' rows="3" name='emailBody'></textarea>
              </div>
              <div class='text-left'>
                <button class='btn btn-primary' type='submit'>Submit</button>
              </div>
            </form>
          </div>

          <div class=' col-sm-4 offset-sm-1'>
            <h3> With SMTP </h3>
            <form action = '/mail/sendsmtp' method='post'>
              <div class='form-group'>
                <label> To </label>
                <input type='text' placeholder='name@example.com' name='emailTo' class='form-control' />
              </div>
              <div class='form-group'>
                <label> Subject </label>
                <input type='text' placeholder='name@example.com' name='emailSubject' class='form-control' />
              </div>
              <div class='form-group'>
                <label> Message </label>
                <textarea class='form-control' rows="3" name='emailBody'></textarea>
              </div>
              <div class='text-left'>
                <button class='btn btn-primary' type='submit'>Submit</button>
              </div>
            </form>
          </div>
        </div>
        <div style='padding-top:24px;'>
          <p class='text-center'> Created By 
            <span style='font-family: monospace;font-weight: bold'>BurningRaven06</span>
          </p>
        </div>
      </div>
    </div>
  </body>
</html>
